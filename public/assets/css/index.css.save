/* CSS Stylesheet */

.homepage-container {
  margin: 12px 63px;
}

.homepage-container .title-container .sub-title span {
  color: #444;
  animation: phaseIn 0.8s forwards;
}

@keyframes phaseIn {
  33% {
    color: #523829;
  }
  42% {
    color: #666;
  }
  100% {
    color: #6f9e9d;
  }
}

.homepage-container .title-container .sub-title span:nth-child(3) {
  animation-delay: 0.2s;
}

.homepage-container .title-container .sub-title span:nth-child(2) {
  animation-duration: 1.2s;
  animation-delay: 0.3s;
}

.homepage-container .title-container .sub-title span:nth-child(7) {
  animation-delay: 0.5s;
}

.homepage-container .title-container .sub-title span:nth-child(1) {
  animation-duration: 0.9s;
  animation-delay: 0.7s;
}

.homepage-container .title-container .sub-title span:nth-child(4) {
  animation-delay: 0.9s;
}

.homepage-container .title-container .sub-title span:nth-child(5) {
  animation-duration: 1s;
  animation-delay: 1.1s;
}

.homepage-container .title-container .sub-title span:nth-child(8) {
  animation-delay: 1.3s;
}

.homepage-container .title-container .sub-title span:nth-child(5) {
  animation-duration: 0.6s;
  animation-delay: 1.6s;
}

.hero-banner {
  overflow-y: hidden;
  height: 0;
  margin: 23px -63px;
  animation: slideDown 1.2s forwards;
  animation-delay: 0.3s;
}

@keyframes slideDown {
  100% {
    height: 360px;
  }
}

.hero-banner img {
  width: 100%;
}

.slider {
  height: 100%;
  position: relative;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-flow: row nowrap;
      -ms-flex-flow: row nowrap;
          flex-flow: row nowrap;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
      -ms-flex-align: end;
          align-items: flex-end;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}

@keyframes showSlider {
  100% {
    opacity: 1;
  }
}

.slider__nav {
  width: 12px;
  height: 12px;
  margin: 2rem 12px;
  border-radius: 50%;
  z-index: 10;
  outline: 6px solid #ccc;
  outline-offset: -6px;
  box-shadow: 0 0 0 0 #333, 0 0 0 0 rgba(51, 51, 51, 0);
  opacity: 0;
  cursor: pointer;
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  -webkit-backface-visibility: hidden;
          backface-visibility: hidden;
  -webkit-animation: showSlider 1s forwards 0.6s;
          animation: showSlider 1s forwards 0.6s;
}
.slider__nav:checked {
  opacity: 0;
  -webkit-animation: check 0.4s linear forwards,
                     showSlider 1s forwards 0.3s;
          animation: check 0.4s linear forwards,
                     showSlider 1s forwards 0.3s;
}
.slider__nav:checked:nth-of-type(1) ~ .slider__inner {
  left: 0%;
}
.slider__nav:checked:nth-of-type(2) ~ .slider__inner {
  left: -100%;
}
.slider__nav:checked:nth-of-type(3) ~ .slider__inner {
  left: -200%;
}
.slider__nav:checked:nth-of-type(4) ~ .slider__inner {
  left: -300%;
}
.slider__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 400%;
  height: 100%;
  opacity: 0;
  -webkit-transition: left 0.4s;
  transition: left 0.4s;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-flow: row nowrap;
      -ms-flex-flow: row nowrap;
          flex-flow: row nowrap;
  animation: showSlider 1s forwards 1s;
}
.slider__contents {
  height: 100%;
  padding: 2rem 0;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  -webkit-flex-flow: column nowrap;
      -ms-flex-flow: column nowrap;
          flex-flow: column nowrap;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}
.slider__contents div {
  margin-top: 23px;
  width: 100%;
  height: 80%;
}

.slider__nav:checked:nth-of-type(1) ~ .slider__inner .slider__contents:nth-child) div {
  background: linear-gradient(221deg, transparent, #000, transparent 42%);
  background-size: 200% 200%;
  animation: boomerang 12s ease forwards;
}

@keyframes boomerang {
  0%{background-position:0% 51%}
  100%{background-position:100% 50%}
}

.slider__image {
  font-size: 2.7rem;
      color: #2196F3;
}
.slider__caption {
  font-weight: 500;
  margin: 2rem 0 1rem;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
  text-transform: uppercase;
}
.slider__txt {
  color: #999;
  margin: 0 auto 3rem;
  max-width: 300px;
}

@-webkit-keyframes check {
  50% {
    outline-color: #333;
    box-shadow: 0 0 0 8px #333, 0 0 0 23px rgba(51, 51, 51, 0.2);
  }
  100% {
    outline-color: #333;
    box-shadow: 0 0 0 0 #333, 0 0 0 0 rgba(51, 51, 51, 0);
  }
}

@keyframes check {
  50% {
    outline-color: #333;
    box-shadow: 0 0 0 8px #333, 0 0 0 23px rgba(51, 51, 51, 0.2);
  }
  100% {
    outline-color: #333;
    box-shadow: 0 0 0 0 #333, 0 0 0 0 rgba(51, 51, 51, 0);
  }
}

.attribute-container {
  opacity: 0;
  transform-origin: top center;
}

.attribute-container:first-child {
  transform: scaleY(0.42);
  animation: listStretchDown 0.8s forwards 0.6s;
}

.attribute-container:last-child {
  transform: scaleY(0.42) translate(0,-210px);
  animation: listStretchDown 0.9s forwards 1.2s,
             listStretchTiming 1.4s forwards 0.4s;
}

@keyframes listStretchDown {
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes listStretchTiming {
  0% {
    margin-top: 0;
  }
  66% {
    margin-top: 88px;
  }
  100% {
    margin-top: 42px;
  }
}

.attribute-title {
  padding-left: 12%;
  color: #444;
}

.attribute-container:first-child .attribute-title {
  animation: phaseIn 0.8s forwards 1.4s;
}

.attribute-container:last-child .attribute-title {
  animation: phaseIn 0.8s forwards 1.8s;
}

.attribute-list ul {
  display: block;
  margin: 12px auto 18px;
  padding: 12px;
  width: 88%;
  text-align: center;
  border: 2px solid #EEE;
  border-radius: 18px;
}

.attribute-list ul li {
  display: inline-block;
  margin: 6px 8px;
  width: 120px;
  height: 120px;
  opacity: 0;
  list-style: none;
  animation: fadeInQuick 0.3s forwards;
  animation-delay: 2s;
}

@keyframes fadeInQuick {
  100% {
    opacity: 1;
  }
}

.attribute-list ul li:nth-child(1) {
  animation-delay: 2s;
}

.attribute-list ul li:nth-child(2) {
  animation-delay: 2.05s;
}

.attribute-list ul li:nth-child(3) {
  animation-delay: 2.1s;
}

.attribute-list ul li:nth-child(4) {
  animation-delay: 2.15s;
}

.attribute-list ul li:nth-child(5) {
  animation-delay: 2.2s;
}

.attribute-list ul li:nth-child(6) {
  animation-delay: 2.25s;
}

.attribute-list ul li:nth-child(7) {
  animation-delay: 2.3s;
}

.attribute-list ul li:nth-child(8) {
  animation-delay: 2.35s;
}

.attribute-list ul li:nth-child(9) {
  animation-delay: 2.4s;
}

.attribute-list ul li:nth-child(10) {
  animation-delay: 2.45s;
}

.attribute-list ul li:nth-child(11) {
  animation-delay: 2.5s;
}

.attribute-list ul li:nth-child(12) {
  animation-delay: 2.55s;
}

.attribute-list ul li:nth-child(13) {
  animation-delay: 2.6s;
}

.attribute-list ul li:nth-child(14) {
  animation-delay: 2.65s;
}

.attribute-list ul li:nth-child(15) {
  animation-delay: 2.7s;
}

.attribute-list ul li:nth-child(16) {
  animation-delay: 2.75s;
}

.attribute-list ul li:nth-child(17) {
  animation-delay: 2.8s;
}

.attribute-list ul li:nth-child(18) {
  animation-delay: 2.85s;
}

.attribute-list ul li:nth-child(19) {
  animation-delay: 2.9s;
}

.attribute-list ul li:nth-child(20) {
  animation-delay: 2.95s;
}

.attribute-list ul li:nth-child(21) {
  animation-delay: 3s;
}

.attribute-list ul li:nth-child(22) {

}

.helper {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.attribute-list ul li p,
.attribute-list ul li img {
  vertical-align: middle;
  text-align: center;
  margin: auto;
  max-width: 108px;
  max-height: 108px;
}
